{
	"useTabs": true,
	"singleQuote": true,
	"printWidth": 999,
	"plugins": ["prettier-plugin-svelte"],
	"singleAttributePerLine": false,
	"htmlWhitespaceSensitivity": "strict",
	"overrides": [
		{
			"files": "*.svelte",
			"options": { "parser": "svelte" }
		}
	],

	"svelteIndentScriptAndStyle": false,
	"svelteStrictMode": true
}
